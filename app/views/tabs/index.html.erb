<h1>Listing tabs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tabs.each do |tab| %>
      <tr>
        <td><%= tab.title %></td>
        <td><%= tab.description %></td>
        <td><%= link_to 'Show', binder_tab_path(@binder, tab) %></td>
        <td><%= link_to 'Edit', edit_binder_tab_path(@binder, tab) %></td>
        <td><%= link_to 'Destroy', binder_tab_path(@binder,tab), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

